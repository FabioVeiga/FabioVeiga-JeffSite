@model Configuracao
@{
    Layout = "_LayoutAdmin";
}

<br>
<h1>@ViewData["Title"]</h1>
<br>

@if(TempData["message"] != null){
  <div class="alert alert-success" role="alert">
    <b>Sucesso: </b>@TempData["message"].ToString()
  </div>
}

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" class="form-control" asp-for="Cod" readonly>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ContactEmail)</label>
        <input type="text" class="form-control" asp-for="ContactEmail">
        <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ImgLogo)</label>
        <input type="file" accept="image/*"class="form-control" asp-for="ImgLogo">
        @* <input type="text" class="form-control" asp-for="ImgLogo"> *@
        <span asp-validation-for="ImgLogo" class="text-danger"></span>
        @if(!string.IsNullOrEmpty(ViewBag.FileNameErro)){
            <span class="text-danger">@ViewBag.FileNameErro</span>
        }
        
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ImgProfile)</label>
        <input type="text" class="form-control" asp-for="ImgProfile">
        <span asp-validation-for="ImgProfile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.UrlMercadoLivre)</label>
        <input type="text" class="form-control" asp-for="UrlMercadoLivre">
    </div>
    <a asp-controller="Admin" asp-action="AdminHome">Voltar</a>
    <button class="btn btn-info">Salvar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}