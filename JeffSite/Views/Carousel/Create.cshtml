@model Carousel
@{
    Layout = "_LayoutAdmin";
}
<br>
<h1>@ViewData["Title"]</h1>
<br>

<form asp-action="Create">
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Title)</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Description)</label>
        <input type="text" class="form-control" asp-for="Description" maxlength="30">
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Link)</label>
        <input type="text" class="form-control" asp-for="Link">
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ExpirationDate)</label>
        <input type="date" class="form-control" asp-for="ExpirationDate">
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Image)</label>
        <input type="file" accept="image/*" class="form-control" asp-for="Image">
        @* @if(!string.IsNullOrEmpty(ViewBag.FileNameProfileErro)){
            <span class="text-danger">@ViewBag.FileNameProfileErro</span>
        } *@
    </div>
    <a asp-controller="Admin" asp-action="AdminHome">Voltar</a>
    <button class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}