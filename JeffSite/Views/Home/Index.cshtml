        </div>
        <div style="text-align:right">
            <a href="#">Saiba mais...</a>
        </div>
    </div>
    
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach(var item in ViewBag.Carousels)
            { 
                <li data-target="#carouselExampleIndicators" data-slide-to="@item.Id" class="active"></li>
            }
        </ol>
        <div class="carousel-inner">
            @{ int cont = 1; }
            @foreach(var item in (List<Carousel>)ViewBag.Carousels){
                @if(cont++ != ViewBag.CarouselsQuantity){
                    <div class="carousel-item">
                        <img class="d-block w-100" style="background-color: lightgrey;" src="@string.Concat($"../img/Carousel/{item.Image}")">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a href="@item.Link" target="_blank">@item.Title</a></h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }else{
                    <div class="carousel-item active">
                        <img class="d-block w-100" style="background-color: lightgrey;" src="@string.Concat($"../img/Carousel/{item.Image}")">
                        <div class="carousel-caption d-none d-md-block">
                            <h5><a href="@item.Link" target="_blank">@item.Title</a></h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }
                
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
    
</div>
