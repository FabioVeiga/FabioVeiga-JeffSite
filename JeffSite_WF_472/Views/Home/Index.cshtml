@model IEnumerable<JeffSite_WF_472.Models.Carousel>
@{
    ViewData["Title"] = "Home Page";
    List<JeffSite_WF_472.Models.Carousel> carousels = ViewBag.Carousels;
    int cont = 1;
    int qntCarousels = (int)ViewBag.CarouselsQuantity;
}

<div>
    <div>
        <h1 class="Titulo">Um pouquinho <span>sobre</span>...</h1>
        <div>
            <p>
                <span class="primeira-letra">A</span>utor de obras de fantasia, suspense, terror e sci-fi, redator freelancer, roteirista de quadrinhos, produtor de conteúdo de boardgames e RPG, membro ativo da Aberst (Associação Brasileira de Escritores de Romance Policial, Suspense e Terror), ator, escultor, mestre de RPG há 31 anos e chutador oficial de meteoros.
            </p>
        </div>
        <div style="text-align:right">
            <a asp-action="BioCompleta">Saiba mais...</a>
        </div>
    </div>

    <div id="carrosselMain">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                @foreach (var item in ViewBag.Carousels)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@item.Id" class="active"></li>
                }
            </ol>
            <div class="carousel-inner">
                @foreach (var item in carousels)
                {
                    if (cont++ != qntCarousels)
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100" style="background-color: lightgrey;" src="@string.Concat("..//img//Carousel//",item.Image)">
                            <div class="carousel-caption d-none d-md-block">
                                <h5><a href="@item.Link" target="_blank">@item.Title</a></h5>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="background-color: lightgrey;" src="@string.Concat("..//img//Carousel//",item.Image)">
                            <div class="carousel-caption d-none d-md-block">
                                <h5><a href="@item.Link" target="_blank">@item.Title</a></h5>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</div>
