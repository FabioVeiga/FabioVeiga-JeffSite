@model JeffSite_WF_472.Models.Leitor
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string nameImg = Model.NameImg;
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("ApprovePost", "Leitor", new { FormMethod.Post }))
{
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.Id)</label>
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })

    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.Name)</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })

    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(x => x.PathImg)</label>
        @Html.EditorFor(model => model.NameImg, new { htmlAttributes = new { @class = "form-control", type = "hidden", @readonly = "readonly" } })
        <img height="500px" width="500px" src="../../Content/img/Leitor/@nameImg">
    </div>
    @Html.ActionLink("Voltar", "ApprovePost", "Leitor")
    <button class="btn btn-primary" type="submit">Aprovar</button>
}