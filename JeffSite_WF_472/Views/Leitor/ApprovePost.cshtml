@model IEnumerable<JeffSite_WF_472.Models.Leitor>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.Nickname)</th>
      <th scope="col">@Html.DisplayNameFor(x => x.PathImg)</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {
          <tr>
            <th scope="row">
                @Html.ActionLink(" ", "Approve", new { id = item.Id }, new { @class = "far fa-thumbs-up fa-2x", @style="text-decoration:none;"  })
                @Html.ActionLink(" ", "Disapprove", new { id = item.Id }, new { @class = "far fa-thumbs-down fa-2x", @style="text-decoration:none;" })
            </th>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Nickname)</td>
            <td><img height="100px" width="100px" src="../Content/img/Leitor/@item.NameImg"></td>
        </tr>
      }
  </tbody>
</table>