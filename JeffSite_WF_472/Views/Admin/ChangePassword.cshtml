@model JeffSite_WF_472.Models.User
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <form asp-controller="Admin" asp-action="ChangePassword" method="POST">
        <input type="hidden" asp-for="UserName">
        <div class="form-group">
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" class="form-control" placeholder="Senha" asp-for="Pass">
            <span asp-validation-for="Pass" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Alterar</button>
    </form>
</div>