@model JeffSite_WF_472.Models.Carousel
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br>
<h1>@ViewData["Title"]</h1>
<br>

@using (Html.BeginForm("Delete", "Carousel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Id)</label>
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Title)</label>
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Description)</label>
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Link)</label>
        @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", type = "text", @readonly = "readonly" } })
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ExpirationDate)</label>
        @Html.EditorFor(model => model.ExpirationDate, new { htmlAttributes = new { @class = "form-control", type = "string", @readonly = "readonly" } })
    </div>
    @Html.ActionLink("Voltar", "Index", "Carousel")
    <button class="btn btn-danger">Excluir</button>
}