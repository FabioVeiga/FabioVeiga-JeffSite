@model IEnumerable<JeffSite_WF_472.Models.Carousel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br>
<h1>@ViewData["Title"]</h1>
<br>

<a class="btn btn-primary" asp-action="Create">Criar</a>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">@Html.DisplayNameFor(Model => Model.Id)</th>
      <th scope="col">@Html.DisplayNameFor(Model => Model.Title)</th>
      <th scope="col">@Html.DisplayNameFor(Model => Model.ExpirationDate)</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
      {
          <tr>
            <th scope="row">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.Label(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </th>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.ExpirationDate)</td>
            
        </tr>
      }
  </tbody>
</table>