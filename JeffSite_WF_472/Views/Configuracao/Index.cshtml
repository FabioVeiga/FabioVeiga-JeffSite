@model JeffSite_WF_472.Models.Configuracao
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br>
<h1>@ViewData["Title"]</h1>
<br>

@if (TempData["message"] != null)
{
    <div class="alert alert-success" role="alert">
        <b>Sucesso: </b>@TempData["message"].ToString()
    </div>
}

@using (Html.BeginForm("Edit", "Configuracao", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorFor(model => model.Cod, new { htmlAttributes = new { @class = "form-control", type = "hidden", @readonly = "readonly" } })
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ContactEmail)</label>
        @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control", type = "text" } })
        @Html.ValidationMessageFor(x => x.ContactEmail)
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.NomeSite)</label>
        @Html.EditorFor(model => model.NomeSite, new { htmlAttributes = new { @class = "form-control", type = "text" } })
        @Html.ValidationMessageFor(x => x.NomeSite)
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.UrlSite)</label>
        @Html.EditorFor(model => model.UrlSite, new { htmlAttributes = new { @class = "form-control", type = "text" } })
        @Html.ValidationMessageFor(x => x.UrlSite)
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ImgProfile)</label>
        @Html.EditorFor(model => model.ImgProfile, new { htmlAttributes = new { @class = "form-control", type = "file", accept = "image/*" } })
        <small>Dimensão 300px de altura - Nome da imagem devera ser <b>ImgProfile.jpg</b></small>
        @if (!string.IsNullOrEmpty(ViewBag.FileNameProfileErro))
        {
            <span class="text-danger">@ViewBag.FileNameProfileErro</span>
        }
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.ImgLogo)</label>
        @Html.EditorFor(model => model.ImgLogo, new { htmlAttributes = new { @class = "form-control", type = "file", accept = "image/*" } })
        <small>Dimensão 300px de altura - Nome da imagem devera ser <b>ImgLogo.jpg</b></small>
        @if (!string.IsNullOrEmpty(ViewBag.FileNameLogoErro))
        {
            <span class="text-danger">@ViewBag.FileNameLogoErro</span>
        }
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.UrlMercadoLivre)</label>
        @Html.EditorFor(model => model.UrlMercadoLivre, new { htmlAttributes = new { @class = "form-control", type = "text" } })
        <small>Nao esqueça do HTTP no endereço</small>
    </div>
    @Html.ActionLink("Voltar", "Index", "AdminHome")
    <button class="btn btn-primary" type="submit">Salvar</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

